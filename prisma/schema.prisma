// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
    id BigInt  @default(autoincrement()) @id @db.UnsignedBigInt
    name String @db.VarChar(50)
    email String @db.VarChar(50)
    baseUrl String @default("https://www.google.com") @Map("base_url")
    authCode  Int @default(0) @Map("auth_code")
    createdAt DateTime @default(now()) @Map("created_at")
    updatedAt DateTime @updatedAt @Map("updated_at")
    likes like_rel[]
    boards board[]
    comments comment[]

    @@unique([email, name])
}

model board {
    id BigInt  @default(autoincrement()) @id @db.UnsignedBigInt
    title String @db.VarChar(50)
    user user @relation(fields: [user_id], references: [id])
    userId BigInt @db.UnsignedBigInt @Map("user_id")
    context String @db.VarChar(512)
    createdAt DateTime @default(now()) @Map("created_at")
    updatedAt DateTime @updatedAt @Map("updated_at")
    likes like_rel[]
    comments comment[]
    images image[]
}

model comment {
    id Int  @default(autoincrement()) @id
    user user @relation(fields: [user_id], references: [id])
    userId BigInt @db.UnsignedBigInt @Map("user_id")
    board board @relation(fields: [board_id], references: [id])
    boardId BigInt @db.UnsignedBigInt @Map("board_id")
    context String @db.VarChar(512)
    createdAt DateTime @default(now()) @Map("created_at")
    updatedAt DateTime @updatedAt @Map("updated_at")
}

model like_rel {
    id Int  @default(autoincrement()) @id
    user user @relation(fields: [user_id], references: [id])
    userId BigInt @db.UnsignedBigInt @Map("user_id")
    board board @relation(fields: [board_id], references: [id])
    boardId BigInt @db.UnsignedBigInt @Map("board_id")
    count Int  @default(0)
    createdAt DateTime @default(now()) @Map("created_at")
}

model image {
    id Int @default(autoincrement()) @id
    board board @relation(fields: [board_id], references: [id])
    boardId BigInt @db.UnsignedBigInt @Map("board_id")
    imgUrl String @db.VarChar(255) @Map("img_url")
    created_at DateTime @default(now())
}